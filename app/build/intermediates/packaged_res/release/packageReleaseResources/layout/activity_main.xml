<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”“ Face Unlock"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Universal Face Unlock untuk Android"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Overall Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/card_background">

                <TextView
                    android:id="@+id/tvOverallStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftarkan wajah untuk memulai"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchEnable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktifkan Face Unlock"
                    android:textColor="@color/text_primary"
                    android:enabled="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Face Registration Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· Data Wajah"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFaceStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âŒ Belum ada wajah"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnrollFace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daftarkan Wajah"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeleteFace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hapus"
                        android:enabled="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lock Screen Credential Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”‘ Kredensial Lock Screen"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan PIN/Password/Pattern untuk auto-unlock"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvCredentialStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âŒ Belum ada kredensial tersimpan"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <!-- Lock Type Selection -->
                <RadioGroup
                    android:id="@+id/rgLockType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rbPin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PIN"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/rbPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/rbPattern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pattern"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_primary" />

                </RadioGroup>

                <!-- PIN/Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCredential"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan PIN/Password"
                    app:endIconMode="password_toggle"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCredential"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Pattern Input (visual drawing) -->
                <LinearLayout
                    android:id="@+id/layoutPattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gambar pattern Anda:"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <me.gustyxpower.faceunlock.view.PatternView
                        android:id="@+id/patternView"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/pattern_background" />

                    <TextView
                        android:id="@+id/tvPatternResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pattern: -"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearPattern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hapus Pattern"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveCredential"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Simpan"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearCredential"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hapus"
                        android:enabled="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Permissions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Izin Diperlukan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Accessibility Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvAccessibilityStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âŒ Accessibility tidak aktif"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAccessibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktifkan"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <!-- Overlay Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvOverlayStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âŒ Overlay permission needed"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOverlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Izinkan"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ Informasi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Setelah reboot, masukkan PIN/Pattern sekali\nâ€¢ Face unlock aktif setelah unlock pertama\nâ€¢ Menggunakan kamera depan untuk deteksi\nâ€¢ Kurang aman dibanding fingerprint"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
