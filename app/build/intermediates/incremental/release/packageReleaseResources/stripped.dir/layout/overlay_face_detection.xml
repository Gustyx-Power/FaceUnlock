<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <!-- Pill Container with CardView (tidak perlu Material theme) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pillCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E6000000"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Face Icon -->
            <ImageView
                android:id="@+id/ivFaceIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_face_scanning"
                android:tint="@android:color/white" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overlay_detecting"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="10dp" />

            <!-- Progress indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/white"
                style="?android:attr/progressBarStyleSmall" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
